{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/nodeunit",
            "args":  ["test/parser", "test"],
            "env": { "XNODE_PARSE_AVOID_FORK": "1"}, 
                // The xcode library will avoid forking another process if XNODE_PARSE_AVOID_FORK flag is set.
                // Required for debugging
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}